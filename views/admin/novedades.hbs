<div class="container" style="margin: 100px; auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }} !
                <a href="/admin/login/logout" class="btn btn-sm btn-danger ">Cerrar sesi√≥n<i
                        class="fa fa-sign-out"></i></a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de novedades</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3 text-end">
            <form class="d-flex" role="search" action="/admin/novedades" method="get">
                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
                <button class="btn btn-outline-success" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
              {{#unless novedades.length}}
                 No se encontraron resultados para "<b>{{q}}</b>"
              {{/unless}}   
            {{/if}}  
        </div>
    </div>



</div>